{
  "type": "object",
  "title": "Metadata Form example",
  "description": "Settings of the metadata form extension.",
  "jupyter.lab.metadataforms": [
    {
      "id": "@jupyterlab-examples/jupyter-ext-provenance:advanced",
      "label": "Credit information",
      "metadataSchema": {
        "type": "object",
        "properties": {
          "/credit/software": {
            "title": "Software libraries",
            "description": "Cite the software libraries used in the notebook",
            "type": "array",
            "items": {
              "type": "string"
            }
          },
          "/credit/data": {
            "title": "Data used",
            "description": "Cite the data used in the notebooks",
            "type": "array",
            "items": {
              "type": "string"
            }
          }
        }
      },
      "uiSchema": {
        "ui:order": [
          "/credit/data",
          "/credit/software"
        ]
      },
      "metadataOptions": {
        "/credit/software": {
          "customRenderer": "@jupyterlab-examples/jupyter-ext-provenance:advanced.software",
          "metadataLevel": "notebook"
        },
        "/credit/data": {
          "customRenderer": "@jupyterlab-examples/jupyter-ext-provenance:advanced.data",
          "metadataLevel": "notebook"
        }
      }
    }
  ],
  "additionalProperties": false
}
